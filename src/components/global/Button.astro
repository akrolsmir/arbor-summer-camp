---
interface Props {
  type?: "button" | "submit" | "reset";
  id?: string;
  class?: string;
  disabled?: boolean;
}

const { 
  type = "button",
  id,
  class: className,
  disabled = false,
} = Astro.props;
---

<button
  type={type}
  id={id}
  disabled={disabled}
  class:list={[
    "px-6 py-2 rounded-lg",
    "bg-gradient-to-r from-blue-800/60 to-blue-900/60",
    "text-white/90 hover:text-white",
    "hover:from-blue-800/80 hover:to-blue-900/80",
    "active:from-blue-800 active:to-blue-900 active:scale-95",
    "transition-all duration-300",
    disabled && "opacity-50 cursor-not-allowed",
    className
  ]}
>
  <slot />
</button> 