---
interface Props {
  type?: "button" | "submit" | "reset";
  id?: string;
  class?: string;
  disabled?: boolean;
}

const { 
  type = "button",
  id,
  class: className,
  disabled = false,
} = Astro.props;
---

<button
  type={type}
  id={id}
  disabled={disabled}
  class:list={[
    "px-6 py-2 rounded-lg",
    "bg-gradient-to-r from-[#edb74d] to-[#e0ab42]",
    "text-white",
    "hover:from-[#edb74d] hover:to-[#f4c866]",
    "active:from-[#c99a33] active:to-[#b38a2e] active:scale-95",
    "transition-all duration-300",
    disabled && "opacity-50 cursor-not-allowed",
    className
  ]}
>
  <slot />
</button>