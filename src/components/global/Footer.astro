---
import Newsletter from "@components/blog/Newsletter.astro";
import { getLangFromUrl, useTranslatedPath, useTranslations } from "@i18n/utils";
import { Icon } from "astro-icon/components";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer class="relative py-12 mt-20">
	<div class="mx-auto max-w-7xl px-8">
		<div class="border-t border-campfire-800 pt-12">
			<div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
				<div>
					<h3 class="font-display text-xl font-semibold text-campfire-300 mb-4">Summer Camp</h3>
					<p class="text-campfire-200 max-w-xs">
						An intellectual retreat where minds meet under summer stars for connection and discovery.
					</p>
				</div>
				
				<div>
					<h3 class="font-display text-lg font-semibold text-campfire-300 mb-4">Quick Links</h3>
					<ul class="space-y-2">
						<li><a href="#" class="text-campfire-200 hover:text-campfire-100 transition-colors">About Us</a></li>
						<li><a href="#" class="text-campfire-200 hover:text-campfire-100 transition-colors">Schedule</a></li>
						<li><a href="#" class="text-campfire-200 hover:text-campfire-100 transition-colors">Location</a></li>
						<li><a href="#" class="text-campfire-200 hover:text-campfire-100 transition-colors">FAQ</a></li>
					</ul>
				</div>
				
				<div>
					<h3 class="font-display text-lg font-semibold text-campfire-300 mb-4">Connect</h3>
					<ul class="space-y-2">
						<li><a href="#" class="text-campfire-200 hover:text-campfire-100 transition-colors">Twitter</a></li>
						<li><a href="#" class="text-campfire-200 hover:text-campfire-100 transition-colors">Instagram</a></li>
						<li><a href="#" class="text-campfire-200 hover:text-campfire-100 transition-colors">Contact Us</a></li>
					</ul>
				</div>
				
				<div>
					<h3 class="font-display text-lg font-semibold text-campfire-300 mb-4">Newsletter</h3>
					<p class="text-campfire-200 mb-4">Stay updated with upcoming events and activities.</p>
					<div class="flex">
						<input type="email" placeholder="Your email" class="w-full bg-night-800 border-campfire-700 text-campfire-100 focus:ring-campfire-500 focus:border-campfire-500 rounded-l-lg">
						<button class="bg-campfire-600 hover:bg-campfire-500 text-white rounded-r-lg px-4">
							Sign Up
						</button>
					</div>
				</div>
			</div>
			
			<div class="mt-12 flex flex-col md:flex-row items-center justify-between gap-y-4 border-t border-campfire-800 pt-8">
				<div class="text-campfire-400">Â©2025 ARBOR</div>
				<button
					id="go-top-button"
					aria-label="Go to Top"
					class="group bg-night-800 hover:bg-campfire-700 text-campfire-300 hover:text-white transition-colors duration-300 p-2 rounded-full"
				>
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="transition-transform group-hover:-translate-y-1">
						<g stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
							<path d="M12 19V5M5 12l7-7 7 7"/>
						</g>
					</svg>
				</button>
			</div>
		</div>
	</div>
	
	<!-- Add decorative elements -->
	<div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-campfire-700/30 to-transparent"></div>
</footer>

<script>
	import { gsap } from "gsap";
	import { ScrollToPlugin } from "gsap/ScrollToPlugin";

	gsap.registerPlugin(ScrollToPlugin);

	document.addEventListener("DOMContentLoaded", () => {
		var goTopButton = document.getElementById("go-top-button");

		if (!goTopButton) return;

		goTopButton.addEventListener("click", function () {
			gsap.to(window, { duration: 1, scrollTo: 0, ease: "power2.inOut" });
		});
	});
</script>
