---
interface Props {
  type?: "button" | "submit" | "reset";
  id?: string;
  class?: string;
  disabled?: boolean;
}

const { 
  type = "button",
  id,
  class: className,
  disabled = false,
} = Astro.props;
---

<button
  type={type}
  id={id}
  disabled={disabled}
  class:list={[
    "px-6 py-2 rounded-lg",
    "bg-gradient-to-r from-forest-800 to-forest-900",
    "text-white",
    "hover:from-forest-700 hover:to-forest-800",
    "active:from-forest-900 active:to-forest-950 active:scale-95",
    "transition-all duration-300",
    disabled && "opacity-50 cursor-not-allowed",
    className
  ]}
>
  <slot />
</button>