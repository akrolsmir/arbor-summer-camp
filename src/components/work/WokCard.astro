---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations, useTranslatedPath } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const { image, project, link, description, class: className } = Astro.props;
---

<li class:list={["relative parchment overflow-hidden rounded-lg transition-all duration-300 hover:translate-y-[-5px]", className]}>
	<a href={link} class="group block h-full">
		<div class="relative aspect-video overflow-hidden rounded-t-lg">
			<Image src={image} alt={project} width="800" height="450" class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" />
			<!-- Paper edge effect -->
			<div class="absolute bottom-0 h-4 w-full bg-gradient-to-t from-[#f8f3e3]/80 to-transparent"></div>
		</div>
		
		<div class="p-6 bg-[#f8f3e3] text-night-800">
			<h3 class="font-display text-xl font-bold text-campfire-700 mb-2">{project}</h3>
			<p class="text-night-800">{description}</p>
			
			<!-- Campfire-style button -->
			<div class="mt-4 inline-block px-5 py-2 rounded-full bg-campfire-600/90 text-white font-medium text-sm transition-all duration-300 group-hover:bg-campfire-700 group-hover:shadow-lg">
				View Project
			</div>
		</div>
	</a>
</li>
