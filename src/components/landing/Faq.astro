import { getLangFromUrl, useTranslations, useTranslatedPath } from "@i18n/utils";

const { class: className } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

// Hardcoded questions and answers for testing
// Replace these with your actual translations once we confirm it works
const faqs = [
	{
		question: "I have an idea. Can I bring my workshop/talk/thing here?",
		answer: "Yes, absolutely. The framework for this is that you run a branch, which is a multi-day workshop or class. For less established projects we also provide pedagogical training beforehand and resources during Summer College."
	},
	{
		question: "When and where is it happening?",
		answer: "It's taking place from June 2-6 at <a href='https://www.lighthaven.space'>Lighthaven</a>, which is located at 2740 Telegraph Avenue, Berkeley, CA. The event includes lunch and dinner for all five days."
	},
	{
		question: "How can I get tickets?",
		answer: "You can purchase tickets directly from our website or purchase multiple events' tickets via <a href='https://www.havenbookings.space/festival-season'>the festival season site</a>. Single-day passes are also available. Each of LessOnline, Summer Camp, and Manifest require separate tickets."
	},
	{
		question: "Is housing provided?",
		answer: "A limited number of onsite rooms can be purchased from Lighthaven, but there will be many times more people in attendance than rooms, so most people will have to find other housing."
	},
	{
		question: "Can I bring my kids?",
		answer: "Yes! Kids are very welcome at the event. There is a dedicated branch for children."
	},
	{
		question: "There's multiple branches I'm interested in that are happening at the same time. Can I do both somehow?",
		answer: "Unfortunately, no. The branches are not designed for people to drop in and out. We recommend picking one and committing to it."
	}
];

