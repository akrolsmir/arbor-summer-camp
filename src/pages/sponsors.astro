---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import { getLangFromUrl, useTranslations, useTranslatedPath } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const seo: AstroSeoProps = {
  title: "Sponsor a Branch - Arbor Summer College",
  description: "Support innovative learning experiences at Arbor Summer College by sponsoring a branch.",
  canonical: "https://summercampcomingsoon.com/sponsors/",
};

// Sponsorship tiers data
const sponsorshipTiers = [
  {
    name: "Silver",
    price: "$2,500",
    greeting: "Hi Ricki,",
    perks: [
      "Logo on branch page",
      "Logo on branch materials",
      "Mentioned in branch announcements",
      "1 free ticket to Summer College",
    ]
  },
  {
    name: "Gold",
    price: "$5,000",
    greeting: "Hey Ricki,",
    perks: [
      "All Silver tier benefits",
      "Larger logo placement",
      "Opportunity to provide branded swag",
      "2 free tickets to Summer College",
      "Social media recognition"
    ]
  },
  {
    name: "Platinum",
    price: "$10,000",
    greeting: "Hello Ricki,",
    perks: [
      "All Gold tier benefits",
      "Premium logo placement",
      "Dedicated sponsor spotlight",
      "3 free tickets to Summer College",
      "Speaking opportunity at branch event",
      "Access to participant contact list (opt-in)"
    ]
  }
];
---

<BaseLayout seo={seo}>
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-7xl mt-10">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Sponsor a Branch</h1>
        <p class="text-xl max-w-3xl mx-auto">
          Support innovative learning experiences and connect with our community
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 mb-16">
        <div class="lg:col-span-7 prose prose-lg">
          <p class="mb-4">
            Arbor Summer College brings together curious minds for a week of experimental learning and community building. By sponsoring a branch, you're supporting innovative educational experiences while connecting with our engaged community.
          </p>
          <p class="mb-4">
            Each branch at Summer College represents a unique learning opportunity, from trading bootcamps to aerial silks, AI wargaming to security mindset training. Your sponsorship helps make these experiences possible and accessible to more participants.
          </p>
          <p class="mb-4">
            We offer three sponsorship tiers, each with increasing visibility and benefits. Whether you're looking to support a specific branch that aligns with your organization's interests or want to contribute to the broader Summer College ecosystem, we have options for you.
          </p>
          <p class="mb-4">
            Interested in becoming a sponsor? Contact us to discuss available branches and customized sponsorship opportunities.
          </p>
        </div>
        
        <div class="lg:col-span-5">
          <div class="bg-white rounded-xl shadow-sm overflow-hidden border border-slate-100">
            <div class="bg-forest-500 py-3 px-6 flex justify-between items-center">
              <h3 class="text-xl font-bold text-white">Sponsorship Benefits</h3>
            </div>
            
            <div class="p-6">
              <ul class="space-y-3">
                <li class="flex items-start">
                  <span class="text-forest-500 mr-2 text-xl">•</span>
                  <span>Support innovative educational experiences</span>
                </li>
                <li class="flex items-start">
                  <span class="text-forest-500 mr-2 text-xl">•</span>
                  <span>Connect with a community of curious learners</span>
                </li>
                <li class="flex items-start">
                  <span class="text-forest-500 mr-2 text-xl">•</span>
                  <span>Brand visibility to an engaged audience</span>
                </li>
                <li class="flex items-start">
                  <span class="text-forest-500 mr-2 text-xl">•</span>
                  <span>Demonstrate commitment to experimental learning</span>
                </li>
                <li class="flex items-start">
                  <span class="text-forest-500 mr-2 text-xl">•</span>
                  <span>Free tickets to Summer College events</span>
                </li>
              </ul>
              
              <div class="mt-6 pt-6 border-t border-slate-200">
                <p class="text-forest-800 font-medium">
                  Ready to become a sponsor?
                </p>
                <div class="mt-4">
                  <a href="/contact" class="block w-full p-4 bg-forest-500 hover:bg-forest-600 text-white text-center font-bold rounded-lg transition-colors">
                    Contact Us About Sponsorship
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-6">Sponsorship Tiers</h2>
        <p class="text-xl mb-8">
          Choose the sponsorship level that best fits your organization's goals
        </p>
      </div>

      <div class="flex flex-col md:flex-row gap-8 mb-16">
        {sponsorshipTiers.map((tier) => (
          <div class="bg-white rounded-xl shadow-sm overflow-hidden border border-slate-100 flex flex-col flex-1 h-full">
            <div class={`py-4 px-6 ${
              tier.name === "Silver" ? "bg-slate-300" : 
              tier.name === "Gold" ? "bg-sunshine-400" : 
              "bg-gray-100"
            }`}>
              <h3 class={`text-2xl font-bold ${
                tier.name === "Silver" ? "text-slate-800" : 
                tier.name === "Gold" ? "text-black" : 
                "text-slate-800"
              }`}>{tier.name} Tier</h3>
              <p class={`text-3xl font-bold mt-2 ${
                tier.name === "Silver" ? "text-slate-800" : 
                tier.name === "Gold" ? "text-black" : 
                "text-slate-800"
              }`}>{tier.price}</p>
            </div>
            
            <div class="p-6 flex-grow">
              <h4 class="font-bold text-lg mb-4">Benefits Include:</h4>
              <ul class="space-y-3 mb-6">
                {tier.perks.map((perk) => (
                  <li class="flex items-start">
                    <span class={`mr-2 text-xl rounded-full w-5 h-5 flex items-center justify-center text-white ${
                      tier.name === "Silver" ? "bg-slate-300" : 
                      tier.name === "Gold" ? "bg-sunshine-400" : 
                      "bg-gray-100"
                    }`}>✓</span>
                    <span>{perk}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <div class="p-6 mt-auto">
              <a 
                href={`mailto:ricki@trading.camp?subject=Arbor%20Summer%20College%20${tier.name}%20Sponsorship%20Inquiry&body=${tier.greeting}%0A%0AI'm%20interested%20in%20learning%20more%20about%20the%20${tier.name}%20sponsorship%20tier%20for%20an%20incubated%20branch%20at%20Arbor%20Summer%20College.`} 
                class={`block w-full p-3 text-center font-bold rounded-lg transition-colors ${
                  tier.name === "Silver" ? "bg-slate-300 hover:bg-slate-400 text-slate-800" : 
                  tier.name === "Gold" ? "bg-sunshine-400 hover:bg-sunshine-500 text-black" : 
                  "bg-gray-100 hover:bg-gray-200 text-slate-800"
                }`}
              >
                Become a {tier.name} Sponsor
              </a>
            </div>
          </div>
        ))}
      </div>

      <div class="bg-forest-50 rounded-xl p-8 md:p-12">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold mb-4">Custom Sponsorship Opportunities</h2>
          <p class="text-lg max-w-3xl mx-auto">
            Looking for something different? We're happy to work with you to create a custom sponsorship package.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="bg-white p-8 rounded-xl shadow-sm">
            <h3 class="text-2xl font-bold mb-4">Sponsor Multiple Branches</h3>
            <p class="mb-4">
              Support several branches that align with your organization's interests and receive discounted rates and additional benefits.
            </p>
            <p class="mb-4">
              Multi-branch sponsorships offer increased visibility across different participant groups and enhanced recognition throughout Summer College.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm">
            <h3 class="text-2xl font-bold mb-4">Event-Wide Sponsorship</h3>
            <p class="mb-4">
              Become a primary sponsor for the entire Summer College event with prominent placement in all marketing materials and event spaces.
            </p>
            <p class="mb-4">
              Event-wide sponsors receive the highest level of visibility and recognition, along with opportunities for deeper engagement with participants.
            </p>
          </div>
        </div>
        
        <div class="text-center mt-8">
          <a href="/contact" class="inline-block px-8 py-4 bg-forest-600 hover:bg-forest-700 text-white font-bold rounded-lg transition-colors">
            Discuss Custom Sponsorship Options
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout> 